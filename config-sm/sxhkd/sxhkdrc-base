alt + shift + @F2
	jgmenu_run >/dev/null 2>&1
# description: rofi 
super + @space
  rofi -show window -sidebar-mode \
    -modi window,"calc:qalc +u8 -nocurrencies" \
    -hide-scrollbar true \
    -bw 2 \
    -lines 15 \
    -padding 24 \
    -width 60 \
    -location 0 \
    -columns 1 \
    -font "Noto Sans 9" \
    -color-enabled true
# 3}}}

